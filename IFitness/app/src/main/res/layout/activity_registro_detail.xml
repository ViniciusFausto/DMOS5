<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:src="@drawable/banner_corrida"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/img_registro_detalhe"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corrida"
            android:id="@+id/txt_titulo_registro_detalhe"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01:32:54"
            android:id="@+id/txt_duracao_registro_detalhe"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10Km"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.000 Cal"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/04/2022"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
</ScrollView>